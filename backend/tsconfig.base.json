{
	"compilerOptions": {
	  "target": "ES2020",
	  "module": "ESNext",
	  "moduleResolution": "Node",
	  "esModuleInterop": true,
	  "resolveJsonModule": true,
	  "strict": true,
	  "skipLibCheck": true,
	  "baseUrl": ".",
	  "paths": {
		"@packages/price-scheduler": ["packages/price-scheduler/src"],
		"@packages/price-scheduler/*": ["packages/price-scheduler/src/*"],
      	"@product-creator/*": ["packages/product-creator/src/*"],
      	"@variant-manager/*": ["packages/variant-manager/src/*"],
		"@shared/*": ["shared/src/*"]
	  }
	}
  }